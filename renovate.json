{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackagePatterns": ["^ghcr.io/linuxserver/"],
      "extractVersion": "regex:.*version-\\D*(?<version>.*)",
      "automerge": true
    },
    {
      "matchUpdateTypes": ["major"],
      "matchPackagePatterns": ["^ghcr.io/linuxserver/"],
      "extractVersion": "regex:.*version-\\D*(?<version>.*)"
    }
  ]
}
